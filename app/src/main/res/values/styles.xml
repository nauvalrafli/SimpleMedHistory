<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text40" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">#0C98F1</item>
    </style>

    <style name="Forms" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="endIconTint">@color/blueButton</item>
        <item name="endIconMode">custom</item>
        <item name="android:textColorHint">@color/tosca</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="rvText" parent="TextAppearance.AppCompat">
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>

    <style name="EditTitle">
        <item name="android:textColor">@color/tosca</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Editable">
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/form_rounded</item>
    </style>

    <style name="EditableFilled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/form_rounded</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:digits">"ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"</item>
        <item name="android:inputType">textFilter</item>
    </style>

</resources>